@model Travel_App.Models.Article


@using (Html.BeginForm(actionName: "Edit", controllerName: "Articles", routeValues: new { id = Model.ArticleId }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <br />
    @Html.Label("Title", "Title")
    <br />
    // @Html.Editor("Title")
    <br />
    @Html.TextAreaFor(b => b.Title, new { @class = "form-control", @rows = "3" })
    @Html.ValidationMessageFor(b => b.Title, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Content", "Content:")
    <br />
    @Html.TextAreaFor(b => b.Text, new { @class = "form-control", @rows = "10" })
    @Html.ValidationMessageFor(b => b.Text, "", new { @class = "text-danger" })
    <br />
    @Html.TextAreaFor(b => b.Destination, new { @class = "form-control", @rows = "3" })
    @Html.ValidationMessageFor(b => b.Destination, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.LabelFor(b => b.CategoriesList, "Choose categories:")
    <br />
    for (int i = 0; i < Model.CategoriesList.Count(); i++)
    {
        @Html.HiddenFor(b => b.CategoriesList[i].Id)
        @Html.HiddenFor(b => b.CategoriesList[i].Name)
        @Html.CheckBoxFor(b => b.CategoriesList[i].Checked)
        @Html.DisplayFor(b => b.CategoriesList[i].Name)
        <br />
    }
    <br />
    <br />

    <button class="btn btn-sm btn-success" type="submit">Try to modify</button>
}

