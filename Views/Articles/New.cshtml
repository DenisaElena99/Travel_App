@model Travel_App.Models.Article
@{
    ViewBag.Title = "Create";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Articles", method: FormMethod.Post))
{
    @Html.Label("Title", "Title:")
    <br />
    @Html.TextBoxFor(a => a.Title, null, new { placeholder = "Type in the article's title", @class = "form-control" })
    @Html.ValidationMessageFor(a => a.Title, "", new { @class = "text-danger" })
    <br />

    @Html.Label("Text", "Text:")
    <br />
    @Html.TextBoxFor(a => a.Text, null, new { placeholder = "Type in the article's text", @class = "form-control" })
    @Html.ValidationMessageFor(a => a.Text, "", new { @class = "text-danger" })
    <br />

    @*@Html.Label("Destination", "Destination:")
