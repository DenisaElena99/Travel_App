@model Travel_App.Models.Comment
@{
    ViewBag.Title = "Edit";
}

<h2>Edit comment</h2>
<form method="post" action="/Comments/Edit/@Model.CommentId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <label>Continut comentariu</label>
    <br />
    <textarea name="Content">@Model.Text</textarea>
    <br />
    <button class="btn btn-success" type="submit">Edit comment</button>
</form>

